{
  "$schema": "https://unpkg.com/knip@5/schema.json",
  "workspaces": {
    ".": {
      "entry": ["scripts/**/*.ts"],
      "project": ["scripts/**/*.ts"]
    },
    "packages/framework/infrastructure": {
      "entry": ["src/index.ts"],
      "project": ["src/**/*.ts"]
    },
    "packages/framework/core": {
      "entry": ["src/index.ts"],
      "project": ["src/**/*.ts"]
    },
    "packages/framework/search": {
      "entry": ["src/index.ts"],
      "project": ["src/**/*.ts"]
    },
    "packages/servers/yandex-tracker": {
      "entry": ["src/index.ts", "src/cli/bin/*.ts"],
      "project": ["src/**/*.ts"]
    }
  },
  "ignore": [
    "**/*.test.ts",
    "**/*.spec.ts",
    "**/tests/**",
    "**/dist/**",
    "**/*.d.ts"
  ],
  "ignoreDependencies": [
    "@vitest/coverage-v8",
    "@vitest/ui",
    "vitest",
    "tsx",
    "@anthropic-ai/mcpb",
    "tsup",
    "esbuild"
  ],
  "ignoreExportsUsedInFile": true,
  "includeEntryExports": false
}
