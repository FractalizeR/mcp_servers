{
  "$schema": "https://unpkg.com/knip@5/schema.json",
  "workspaces": {
    ".": {
      "entry": ["scripts/**/*.ts"],
      "project": ["scripts/**/*.ts"]
    },
    "packages/framework/infrastructure": {
      "entry": ["src/index.ts"],
      "project": ["src/**/*.ts"]
    },
    "packages/framework/core": {
      "entry": ["src/index.ts"],
      "project": ["src/**/*.ts"]
    },
    "packages/framework/search": {
      "entry": ["src/index.ts"],
      "project": ["src/**/*.ts"]
    },
    "packages/servers/yandex-tracker": {
      "entry": ["src/index.ts", "src/cli/bin/*.ts"],
      "project": ["src/**/*.ts"]
    },
    "packages/framework/cli": {
      "entry": ["src/index.ts"],
      "project": ["src/**/*.ts"]
    },
    "packages/servers/yandex-wiki": {
      "entry": ["src/index.ts", "src/cli/bin/*.ts"],
      "project": ["src/**/*.ts"]
    },
    "packages/servers/ticktick": {
      "entry": ["src/index.ts", "src/cli/bin/*.ts"],
      "project": ["src/**/*.ts"]
    }
  },
  "ignore": [
    "**/*.test.ts",
    "**/*.spec.ts",
    "**/tests/**",
    "**/dist/**",
    "**/*.d.ts",
    "vitest.workspace.ts",
    "vitest.shared.ts"
  ],
  "ignoreDependencies": [
    "@vitest/coverage-v8",
    "@vitest/ui",
    "vitest",
    "tsx",
    "@anthropic-ai/mcpb",
    "tsup",
    "esbuild",
    "@fractalizer/mcp-infrastructure",
    "@fractalizer/mcp-cli",
    "@fractalizer/mcp-core",
    "@fractalizer/mcp-search",
    "reflect-metadata",
    "commander",
    "@modelcontextprotocol/sdk",
    "pino",
    "pino-pretty",
    "zod-to-json-schema",
    "inversify",
    "axios",
    "chalk",
    "inquirer",
    "ora",
    "@iarna/toml",
    "mime-types",
    "semantic-release",
    "semantic-release-monorepo",
    "@semantic-release/changelog",
    "@semantic-release/exec",
    "@semantic-release/git",
    "@semantic-release/github",
    "@commitlint/cli",
    "@commitlint/config-conventional",
    "conventional-changelog-conventionalcommits",
    "@changesets/cli",
    "husky",
    "lint-staged"
  ],
  "ignoreExportsUsedInFile": true,
  "includeEntryExports": false
}
