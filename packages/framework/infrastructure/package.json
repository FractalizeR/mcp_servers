{
  "name": "@fractalizer/mcp-infrastructure",
  "version": "0.2.0",
  "description": "Reusable infrastructure layer: HTTP, cache, logging, async utilities",
  "keywords": [
    "mcp",
    "infrastructure",
    "http",
    "logging",
    "cache"
  ],
  "license": "MIT",
  "author": "Fractalizer",
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    },
    "./http": {
      "types": "./dist/http/index.d.ts",
      "default": "./dist/http/index.js"
    },
    "./cache": {
      "types": "./dist/cache/index.d.ts",
      "default": "./dist/cache/index.js"
    },
    "./logging": {
      "types": "./dist/logging/index.d.ts",
      "default": "./dist/logging/index.js"
    },
    "./config": {
      "types": "./dist/config.d.ts",
      "default": "./dist/config.js"
    },
    "./*": "./dist/*"
  },
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist",
    "README.md",
    "CHANGELOG.md"
  ],
  "scripts": {
    "build": "tsc -b && tsc-alias",
    "clean": "rimraf dist",
    "cpd": "jscpd src",
    "cpd:quiet": "jscpd src --silent",
    "cpd:report": "jscpd src --reporters html,console",
    "depcruise": "depcruise src -c ../../../.dependency-cruiser.cjs",
    "format": "prettier --write \"src/**/*.ts\" \"tests/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\" \"tests/**/*.ts\"",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "lint:quiet": "eslint src --ext .ts --quiet",
    "test": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:quiet": "vitest run --reporter=dot --silent",
    "test:verbose": "vitest run --reporter=verbose",
    "test:watch": "vitest watch",
    "typecheck": "tsc --noEmit",
    "validate": "npm run lint && npm run typecheck && npm run test && npm run cpd && npm run depcruise && npm run validate:docs",
    "validate:docs": "tsx ../../../scripts/validate-docs-size.ts",
    "validate:quiet": "npm run lint:quiet && npm run typecheck && npm run test:quiet && npm run cpd:quiet"
  },
  "dependencies": {
    "axios": "^1.13.2",
    "p-limit": "^7.2.0",
    "pino": "^10.1.0",
    "pino-pretty": "^13.1.2",
    "rotating-file-stream": "^3.2.7"
  },
  "publishConfig": {
    "access": "public"
  }
}
