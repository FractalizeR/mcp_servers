{
  "name": "@mcp-server/ticktick",
  "version": "0.1.0",
  "description": "MCP Server for TickTick todo-list application",
  "keywords": [
    "mcp",
    "ticktick",
    "todo",
    "task-management",
    "api",
    "claude"
  ],
  "license": "MIT",
  "author": "Fractalizer",
  "type": "module",
  "imports": {
    "#config": "./src/config/index.ts",
    "#config/*": "./src/config/*",
    "#ticktick_api/*": "./src/ticktick_api/*",
    "#tools/*": "./src/tools/*",
    "#composition-root/*": "./src/composition-root/*",
    "#cli/*": "./src/cli/*",
    "#constants": "./src/constants.ts",
    "#common/*": "./src/common/*",
    "#integration/*": "./tests/integration/*",
    "#helpers/*": "./tests/helpers/*"
  },
  "main": "./dist/index.js",
  "bin": {
    "mcp-connect": "./dist/cli/bin/mcp-connect.js",
    "mcp-server-ticktick": "./dist/ticktick.bundle.js"
  },
  "files": [
    "dist",
    "README.md",
    "CLAUDE.md"
  ],
  "scripts": {
    "build": "tsc -b && tsc-alias && npm run build:bundle",
    "build:bundle": "tsx ../scripts/increment-build.ts && tsup",
    "build:mcpb": "npm run build && tsx ../scripts/build-mcpb.ts",
    "clean": "rimraf dist",
    "cpd": "jscpd src",
    "cpd:quiet": "jscpd src --silent",
    "cpd:report": "jscpd src --reporters html,console",
    "depcruise": "depcruise src -c ../../../.dependency-cruiser.cjs",
    "format": "prettier --write \"src/**/*.ts\" \"tests/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\" \"tests/**/*.ts\"",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "lint:quiet": "eslint src --ext .ts --quiet",
    "test": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:quiet": "vitest run --reporter=dot --silent",
    "test:smoke": "vitest run tests/smoke",
    "test:verbose": "vitest run --reporter=verbose",
    "test:watch": "vitest watch",
    "typecheck": "tsc --noEmit",
    "validate": "npm run lint && npm run typecheck && npm run test && npm run test:smoke && npm run cpd && npm run depcruise && npm run validate:docs",
    "validate:docs": "tsx ../../../scripts/validate-docs-size.ts",
    "validate:quiet": "npm run lint:quiet && npm run typecheck && npm run test:quiet && npm run cpd:quiet"
  },
  "dependencies": {
    "@mcp-framework/cli": "^0.2.0",
    "@mcp-framework/core": "^0.1.0",
    "@mcp-framework/infrastructure": "^0.2.0",
    "@mcp-framework/search": "^0.1.0",
    "@modelcontextprotocol/sdk": "^1.23.0",
    "axios": "^1.13.2",
    "chalk": "^5.6.2",
    "commander": "^14.0.2",
    "inquirer": "^13.0.1",
    "inversify": "^7.10.4",
    "ora": "^9.0.0",
    "pino": "^10.1.0",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@types/inquirer": "^9.0.9",
    "axios-mock-adapter": "^2.1.0",
    "tsup": "^8.5.1"
  },
  "publishConfig": {
    "access": "public"
  }
}
