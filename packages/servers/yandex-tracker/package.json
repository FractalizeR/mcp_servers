{
  "name": "@mcp-server/yandex-tracker",
  "version": "4.0.0",
  "description": "MCP Server for Yandex Tracker API integration",
  "keywords": [
    "mcp",
    "yandex-tracker",
    "project-management",
    "api",
    "claude"
  ],
  "license": "MIT",
  "author": "Fractalizer",
  "type": "module",
  "imports": {
    "#config": "./src/config/index.ts",
    "#config/*": "./src/config/*",
    "#tracker_api/*": "./src/tracker_api/*",
    "#tools/*": "./src/tools/*",
    "#composition-root/*": "./src/composition-root/*",
    "#cli/*": "./src/cli/*",
    "#constants": "./src/constants.ts",
    "#common/*": "./src/common/*",
    "#integration/*": "./tests/integration/*",
    "#helpers/*": "./tests/helpers/*"
  },
  "main": "./dist/index.js",
  "bin": {
    "mcp-connect": "./dist/cli/bin/mcp-connect.js",
    "mcp-server-yandex-tracker": "./dist/yandex-tracker.bundle.js"
  },
  "files": [
    "dist",
    "scripts",
    "README.md",
    "CLAUDE.md",
    "CHANGELOG.md"
  ],
  "scripts": {
    "benchmark": "tsx benchmarks/cli-performance.ts",
    "benchmark:all": "npm run benchmark && npm run benchmark:bundle && npm run benchmark:memory",
    "benchmark:bundle": "bash benchmarks/bundle-size.sh",
    "benchmark:memory": "tsx benchmarks/memory-usage.ts",
    "prebuild": "npm run generate:index",
    "build": "tsc -b && tsc-alias && npm run build:bundle",
    "build:bundle": "tsx ../scripts/increment-build.ts && tsup",
    "build:mcpb": "npm run build && tsx ../scripts/build-mcpb.ts",
    "clean": "rimraf dist",
    "cpd": "jscpd src || true",
    "cpd:quiet": "jscpd src --silent || true",
    "cpd:report": "jscpd src --reporters html,console",
    "depcruise": "depcruise src -c ../../../.dependency-cruiser.cjs || true",
    "dev": "npm run build && node dist/yandex-tracker.bundle.js",
    "format": "prettier --write \"src/**/*.ts\" \"tests/**/*.ts\" \"scripts/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\" \"tests/**/*.ts\" \"scripts/**/*.ts\"",
    "generate:index": "tsx scripts/generate-tool-index.ts",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "lint:quiet": "eslint src --ext .ts --quiet",
    "mcp:connect": "npm run build && node dist/cli/bin/mcp-connect.js connect",
    "mcp:disconnect": "npm run build && node dist/cli/bin/mcp-connect.js disconnect",
    "mcp:list": "npm run build && node dist/cli/bin/mcp-connect.js list",
    "mcp:status": "npm run build && node dist/cli/bin/mcp-connect.js status",
    "migrate:subpath-imports": "tsx scripts/migrate-to-subpath-imports.ts",
    "test": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:perf": "tsx scripts/analyze-test-performance.ts",
    "test:quiet": "vitest run --reporter=dot --silent",
    "test:smoke": "tsx scripts/smoke-test-server.ts",
    "test:verbose": "vitest run --reporter=verbose",
    "test:watch": "vitest watch",
    "typecheck": "tsc --noEmit",
    "validate": "npm run lint && npm run typecheck && npm run test && npm run test:smoke && npm run cpd && npm run validate:docs",
    "validate:docs": "tsx ../../../scripts/validate-docs-size.ts",
    "validate:quiet": "npm run lint:quiet && npm run typecheck && npm run test:quiet && npm run cpd:quiet",
    "validate:tools": "tsx scripts/validate-tool-registration.ts"
  },
  "dependencies": {
    "@iarna/toml": "^2.2.5",
    "@mcp-framework/cli": "^0.2.0",
    "@mcp-framework/core": "^0.1.0",
    "@mcp-framework/infrastructure": "^0.2.0",
    "@mcp-framework/search": "^0.1.0",
    "@modelcontextprotocol/sdk": "^1.23.0",
    "axios": "^1.13.2",
    "chalk": "^5.6.2",
    "commander": "^14.0.2",
    "inquirer": "^13.0.1",
    "inversify": "^7.10.4",
    "mime-types": "^3.0.2",
    "ora": "^9.0.0",
    "pino": "^10.1.0",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@anthropic-ai/mcpb": "^2.0.1",
    "@types/inquirer": "^9.0.9",
    "@types/mime-types": "^3.0.1",
    "@types/node": "^24.10.1",
    "axios-mock-adapter": "^2.1.0",
    "esbuild": "^0.27.0",
    "tsc-alias": "^1.8.16",
    "tsup": "^8.5.1",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^4.0.8"
  },
  "publishConfig": {
    "access": "public"
  }
}
