{
  "name": "fyt-mcp",
  "version": "0.1.0",
  "description": "FractalizeR's Yandex Tracker MCP - MCP сервер для интеграции с Яндекс.Трекером",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "generate:index": "tsx scripts/generate-tool-index.ts",
    "prebuild": "npm run generate:index",
    "build": "tsc && tsc-alias",
    "build:bundle": "esbuild src/index.ts --bundle --platform=node --format=esm --outfile=dist/bundle.js --external:@modelcontextprotocol/sdk --external:axios --external:inversify --external:p-limit --sourcemap",
    "dev": "tsc && tsc-alias && node dist/index.js",
    "clean": "rimraf dist/",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "typecheck": "tsc --noEmit",
    "typecheck:tests": "tsc --project tsconfig.tests.json",
    "typecheck:all": "npm run typecheck && npm run typecheck:tests",
    "test": "vitest run",
    "test:watch": "vitest watch",
    "test:coverage": "vitest run --coverage",
    "test:unit": "vitest run tests/unit",
    "test:integration": "vitest run tests/integration",
    "test:smoke": "tsx scripts/smoke-test-server.ts",
    "format": "prettier --write \"src/**/*.ts\" \"tests/**/*.ts\" \"scripts/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\" \"tests/**/*.ts\" \"scripts/**/*.ts\"",
    "depcruise": "depcruise src --validate",
    "depcruise:graph": "depcruise src --output-type dot | dot -T svg > dependency-graph.svg",
    "depcruise:graph:html": "depcruise src --output-type dot | dot -T svg | depcruise-wrap-stream-in-html > dependency-graph.html",
    "validate:tools": "tsx scripts/validate-tool-registration.ts",
    "validate": "npm run lint && npm run typecheck:all && npm run test && npm run depcruise && npm run validate:tools && npm run build && npm run build:bundle",
    "mcp:connect": "tsx cli/bin/mcp-connect.ts connect",
    "mcp:disconnect": "tsx cli/bin/mcp-connect.ts disconnect",
    "mcp:status": "tsx cli/bin/mcp-connect.ts status",
    "mcp:list": "tsx cli/bin/mcp-connect.ts list",
    "prepublishOnly": "npm run clean && npm run build:bundle",
    "prepare": "husky"
  },
  "keywords": [
    "mcp",
    "yandex",
    "tracker",
    "task-management"
  ],
  "author": "Fractalizer",
  "license": "MIT",
  "engines": {
    "node": ">=22.0.0"
  },
  "dependencies": {
    "@iarna/toml": "^2.2.5",
    "@modelcontextprotocol/sdk": "^1.22.0",
    "axios": "^1.13.2",
    "chalk": "^5.6.2",
    "commander": "^14.0.2",
    "inquirer": "^9.3.8",
    "inversify": "^7.10.4",
    "ora": "^8.2.0",
    "p-limit": "^7.2.0",
    "pino": "^10.1.0",
    "pino-pretty": "^13.1.2",
    "rotating-file-stream": "^3.2.7",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@commitlint/cli": "^20.1.0",
    "@commitlint/config-conventional": "^20.0.0",
    "@types/inquirer": "^9.0.9",
    "@types/nock": "^10.0.3",
    "@types/node": "^24.10.1",
    "@types/p-limit": "^2.1.0",
    "@types/pino": "^7.0.4",
    "@typescript-eslint/eslint-plugin": "^8.46.4",
    "@typescript-eslint/parser": "^8.46.4",
    "@vitest/coverage-v8": "^4.0.8",
    "dependency-cruiser": "^17.2.0",
    "esbuild": "^0.27.0",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.6",
    "nock": "^14.0.10",
    "prettier": "^3.6.2",
    "rimraf": "^6.1.0",
    "tsc-alias": "^1.8.16",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3",
    "vitest": "^4.0.8"
  }
}
