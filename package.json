{
  "name": "yandex-tracker-mcp",
  "version": "0.1.0",
  "description": "MCP сервер для интеграции с Яндекс.Трекером",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "watch": "tsc --watch",
    "dev": "tsc && node dist/index.js",
    "clean": "rm -rf dist/",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "typecheck": "tsc --noEmit",
    "typecheck:tests": "tsc --project tsconfig.tests.json",
    "typecheck:all": "npm run typecheck && npm run typecheck:tests",
    "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js",
    "test:watch": "node --experimental-vm-modules node_modules/jest/bin/jest.js --watch",
    "test:coverage": "node --experimental-vm-modules node_modules/jest/bin/jest.js --coverage",
    "test:unit": "node --experimental-vm-modules node_modules/jest/bin/jest.js --testPathPattern='.*.test.ts$'",
    "validate": "npm run lint && npm run typecheck && npm run test && npm run build",
    "prepublish": "npm run clean && npm run build"
  },
  "keywords": [
    "mcp",
    "yandex",
    "tracker",
    "task-management"
  ],
  "author": "Fractalizer",
  "license": "MIT",
  "engines": {
    "node": ">=16.0.0"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.22.0",
    "axios": "^1.13.2",
    "inversify": "^7.10.4",
    "p-limit": "^7.2.0",
    "reflect-metadata": "^0.2.2"
  },
  "devDependencies": {
    "@jest/globals": "^30.2.0",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.10.1",
    "@types/p-limit": "^2.1.0",
    "@typescript-eslint/eslint-plugin": "^8.46.4",
    "@typescript-eslint/parser": "^8.46.4",
    "eslint": "^9.39.1",
    "jest": "^30.2.0",
    "ts-jest": "^29.4.5",
    "typescript": "^5.9.3"
  }
}
