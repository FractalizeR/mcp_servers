{
  "name": "yandex-tracker-mcp",
  "version": "0.1.0",
  "description": "MCP сервер для интеграции с Яндекс.Трекером",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc && tsc-alias",
    "build:bundle": "esbuild src/index.ts --bundle --platform=node --format=esm --outfile=dist/bundle.js --external:@modelcontextprotocol/sdk --external:axios --external:inversify --external:p-limit --external:reflect-metadata --sourcemap",
    "watch": "tsc --watch",
    "dev": "tsc && tsc-alias && node dist/index.js",
    "clean": "rm -rf dist/",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "typecheck": "tsc --noEmit",
    "typecheck:tests": "tsc --project tsconfig.tests.json",
    "typecheck:all": "npm run typecheck && npm run typecheck:tests",
    "test": "vitest run",
    "test:watch": "vitest watch",
    "test:coverage": "vitest run --coverage",
    "test:unit": "vitest run --testPathPattern='.*.test.ts$'",
    "validate": "npm run lint && npm run typecheck:all && npm run test && npm run build && npm run build:bundle",
    "prepublish": "npm run clean && npm run build:bundle"
  },
  "keywords": [
    "mcp",
    "yandex",
    "tracker",
    "task-management"
  ],
  "author": "Fractalizer",
  "license": "MIT",
  "engines": {
    "node": ">=22.0.0"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.22.0",
    "axios": "^1.13.2",
    "inversify": "^7.10.4",
    "p-limit": "^7.2.0",
    "reflect-metadata": "^0.2.2"
  },
  "devDependencies": {
    "@types/node": "^24.10.1",
    "@types/p-limit": "^2.1.0",
    "@typescript-eslint/eslint-plugin": "^8.46.4",
    "@typescript-eslint/parser": "^8.46.4",
    "@vitest/coverage-v8": "^4.0.8",
    "esbuild": "^0.27.0",
    "eslint": "^9.39.1",
    "tsc-alias": "^1.8.16",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3",
    "vitest": "^4.0.8"
  }
}
